<h3>{{ lang.ContactUs }}:</h3>
<form action="" method="post">
    <input type="text" class="form-control" name="name" placeholder="{{ lang.YourName }}" required/>
    <input type="email" class="form-control" name="email" placeholder="{{ lang.YourEmail }}" required/>
    <textarea name="message" class="form-control" placeholder="{{ lang.YourMessage }}" required></textarea>
    <input type="submit" class="btn btn-lg btn-primary btn-block" value="{{ lang.Send }}"/>
</form>