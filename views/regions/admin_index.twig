{% extends 'admin.twig' %}

{% block content %}
    <br/><br/><br/>
<h3>{{ lang.Regions }}</h3>
    <br/>
<div>
    <a href="/admin/regions/add/"><button class="btn btn-sm btn-success">{{ lang.Add }}</button></a>
</div>
    <br/>
<table class="table table-striped" style="width: 100%;">
    <tr>
        <th>{{ lang.RegionName }}</th>
        <th>{{ lang.Code }}</th>
        <th>{{ lang.City }}</th>
        <th>{{ lang.Population }}</th>
        <th>{{ lang.Dencity }}</th>
        <th>{{ lang.Area }}</th>
        <th>{{ lang.Data }}</th>
        <th>{{ lang.Action }}</th>
    </tr>
    {% for region in regions %}
    <tr>
        <td>{{ region.name }}</td>
        <td>{{ region.code }}</td>
        <td>{{ region.city }}</td>
        <td>{{ region.population }}</td>
        <td>{{ region.density }}</td>
        <td>{{ region.area }}</td>
        <td>{{ region.data }}</td>
        <td align="left">
            <a href="/admin/regions/edit/{{ region.id }}"><button class="btn btn-sm btn-primary">{{ lang.Edit }}</button></a>
            <a href="/admin/regions/delete/{{ region.id }}"><button class="btn btn-sm btn-warning">{{ lang.Delete }}</button></a>
        </td>
    </tr>
    {% endfor %}
</table>
{% endblock %}