{% extends 'admin.twig' %}

{% block content %}
    <br/><br/><br/>
<h3>{{ lang.EditingRegion }}</h3><br/>
<form method="post" action="">
    <input type="hidden" name="id" value="{{ region.id }}"/>
    <div class="form-group row">
        <label for="name" class="col-sm-2">{{ lang.RegionName }}</label>
        <input type="text" class="col-sm-10" id="name" name="name" value="{{ region.name }}"/>
    </div>
    <div class="form-group row">
        <label for="code" class="col-sm-2">{{ lang.Code }}</label>
        <input type="text" class="col-sm-10" id="code" name="code" value="{{ region.code }}"/>
    </div>
    <div class="form-group row">
        <label for="city" class="col-sm-2">{{ lang.City }}</label>
        <input type="text" class="col-sm-10" id="city" name="city" value="{{ region.city }}"/>
    </div>
    <div class="form-group row">
        <label for="population" class="col-sm-2">{{ lang.Population }}</label>
        <input type="text" class="col-sm-10" id="population" name="population" value="{{ region.population }}"/>
    </div>
    <div class="form-group row">
        <label for="density" class="col-sm-2">{{ lang.Dencity }}</label>
        <input type="text" class="col-sm-10" id="density" name="density" value="{{ region.density }}"/>
    </div>
    <div class="form-group row">
        <label for="area" class="col-sm-2">{{ lang.Area }}</label>
        <input type="text" class="col-sm-10" id="area" name="area" value="{{ region.area }}"/>
    </div>
    <div class="form-group row">
        <label for="data" class="col-sm-2">{{ lang.Data }}</label>
        <textarea name="data" class="col-sm-10" id="data" class="form-control">{{ region.data }}</textarea>
    </div>
    <input type="submit" class="btn btn-success" value="{{ lang.Save }}">
</form>
{% endblock %}