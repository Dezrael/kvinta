{% extends 'admin.twig' %}

{% block content %}
    <br/><br/><br/>
<h3>{{ lang.EditingRegion }}</h3><br/>
<form method="post" action="">
    <input type="hidden" name="id" value="{{ region.id }}"/>
    <div class="form-group">
        <label for="name">{{ lang.RegionName }}</label>
        <input type="text" id="name" name="name" value="{{ region.name }}"/>
    </div>
    <div class="form-group">
        <label for="code">{{ lang.Code }}</label>
        <input type="text" id="code" name="code" value="{{ region.code }}"/>
    </div>
    <div class="form-group">
        <label for="city">{{ lang.City }}</label>
        <input type="text" id="city" name="city" value="{{ region.city }}"/>
    </div>
    <div class="form-group">
        <label for="population">{{ lang.Population }}</label>
        <input type="text" id="population" name="population" value="{{ region.population }}"/>
    </div>
    <div class="form-group">
        <label for="density">{{ lang.Dencity }}</label>
        <input type="text" id="density" name="density" value="{{ region.density }}"/>
    </div>
    <div class="form-group">
        <label for="area">{{ lang.Area }}</label>
        <input type="text" id="area" name="area" value="{{ region.area }}"/>
    </div>
    <div class="form-group">
        <label for="data">{{ lang.Data }}</label>
        <textarea name="data" id="data" class="form-control">{{ region.data }}</textarea>
    </div>
    <input type="submit" class="btn btn-success" value="{{ lang.Save }}">
</form>
{% endblock %}